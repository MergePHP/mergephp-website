<?xml version="1.0"?>
<ruleset name="MergePHPStandard">
	<description>PSR12 with tabs instead of spaces</description>

	<!-- runtime options -->
	<config name="show_progress" value="1"/>
	<config name="colors" value="1"/>

	<!-- files and folders to lint -->
	<file>src</file>
	<file>tests</file>

	<!-- use PSR12, but with tabs instead of spaces -->
	<arg name="tab-width" value="4"/>
	<rule ref="PSR12">
		<exclude name="Generic.WhiteSpace.DisallowTabIndent"/>
	</rule>
	<rule ref="Generic.WhiteSpace.DisallowSpaceIndent"/>
	<rule ref="Generic.WhiteSpace.ScopeIndent">
		<properties>
			<property name="indent" value="4"/>
			<property name="tabIndent" value="true"/>
		</properties>
	</rule>
</ruleset>
